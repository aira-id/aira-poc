# Application Settings
APP_NAME=AIRA Voice Bot Server
APP_VERSION=0.1.0
DEBUG=False

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/aira-server.log

# ASR (Automatic Speech Recognition) Settings
ASR_MODEL=zipformer
ASR_LANG=id
ASR_SAMPLE_RATE=16000
ASR_ENCODER_FILENAME=encoder-epoch-99-avg-1.onnx
ASR_DECODER_FILENAME=decoder-epoch-99-avg-1.onnx
ASR_JOINER_FILENAME=joiner-epoch-99-avg-1.onnx
ASR_TOKENS_FILENAME=tokens.txt

# LLM (Large Language Model) Settings
LLM_ENDPOINT=http://localhost:8080/v1/chat/completions
LLM_MODEL=gemma_1b_q8_0
LLM_SYSTEM_PROMPT=You are a helpful assistant.
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7

# TTS (Text-to-Speech) Settings
TTS_MODEL=zipformer
TTS_SPEAKER=wibowo
TTS_SAMPLE_RATE=16000
TTS_SPEED=1.0
TTS_SPLIT=True
TTS_PROVIDER=cpu
TTS_THREADS=2
MODELS_ROOT=/home/fitra/Workspaces/aira-server/models
